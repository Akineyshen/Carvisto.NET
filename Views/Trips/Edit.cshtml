@model Carvisto.Models.Trip
@{
    ViewData["Title"] = "Edit Trip";
}
<h2>Edit Trip</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DriverId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="StartLocation"></label>
        <input asp-for="StartLocation" class="form-control" />
        <span asp-validation-for="StartLocation" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="EndLocation"></label>
        <input asp-for="EndLocation" class="form-control" />
        <span asp-validation-for="EndLocation" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartureDateTime"></label>
        <input asp-for="DepartureDateTime" class="form-control" type="date" />
        <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="VehicleBrand"></label>
        <select asp-for="VehicleBrand" class="form-control" asp-items="@(new SelectList(Carvisto.Models.VehicleBrands.Brands))">
            <option value="">Select a brand</option>
        </select>
        <span asp-validation-for="VehicleBrand" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Comments"></label>
        <textarea asp-for="Comments" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>