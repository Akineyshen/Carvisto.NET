@model Carvisto.Models.Trip
@{
    ViewData["Title"] = "Create Trip";
}

<div class="create-trip-form">
    <div class="edit-trip-card">
        <h2 class="auth-title">Create New Trip</h2>

        <form asp-action="Create" method="post" class="auth-form trip-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <input type="hidden" asp-for="DriverId" value="@ViewBag.DriverId" />

            <div class="form-group">
                <label asp-for="StartLocation" class="form-label">From</label>
                <input asp-for="StartLocation" class="form-input" placeholder="Enter departure city" />
                <span asp-validation-for="StartLocation" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndLocation" class="form-label">To</label>
                <input asp-for="EndLocation" class="form-input" placeholder="Enter arrival city" />
                <span asp-validation-for="EndLocation" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="DepartureDateTime" class="form-label">Departure Date</label>
                <input asp-for="DepartureDateTime" class="form-input" type="date" />
                <span asp-validation-for="DepartureDateTime" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="form-label">Price per seat</label>
                <input asp-for="Price" class="form-input" placeholder="Enter price in PLN" />
                <span asp-validation-for="Price" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="VehicleBrand" class="form-label">Vehicle</label>
                <input asp-for="VehicleBrand" class="form-input" placeholder="Enter vehicle brand">
                <span asp-validation-for="VehicleBrand" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comments" class="form-label">Additional Information</label>
                <textarea asp-for="Comments" class="form-input trip-textarea" placeholder="Add any notes or requirements for passengers"></textarea>
                <span asp-validation-for="Comments" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="auth-button">Create Trip</button>
            </div>
        </form>
    </div>
</div>
