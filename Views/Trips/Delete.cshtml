@model Carvisto.Models.Trip
@{
    ViewData["Title"] = "Delete Trip";
}
<h2>Delete Trip</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Start</dt>
        <dd class="col-sm-10">@Model.StartLocation</dd>
        <dt class="col-sm-2">End</dt>
        <dd class="col-sm-10">@Model.EndLocation</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.DepartureDateTime.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Vehicle</dt>
        <dd class="col-sm-10">@Model.VehicleBrand</dd>
        <dt class="col-sm-2">Comments</dt>
        <dd class="col-sm-10">@Model.Comments</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MyTrips" class="btn btn-secondary">Back to List</a>
    </form>
</div>