@model Carvisto.Models.AccountViewModel
@{
    ViewData["Title"] = "My Account";
}

<div class="settings-container">
    <div class="settings-card">
        <h2 class="settings-title">Account Settings</h2>

        <form asp-action="Index" method="post" class="settings-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="UserSettings.ContactName" class="form-label">Full Name</label>
                <input asp-for="UserSettings.ContactName" class="form-input" placeholder="Enter your full name" />
                <span asp-validation-for="UserSettings.ContactName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserSettings.ContactPhone" class="form-label">Phone Number</label>
                <input asp-for="UserSettings.ContactPhone" class="form-input" placeholder="Enter your phone number" />
                <span asp-validation-for="UserSettings.ContactPhone" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="auth-button">Save</button>
            </div>
        </form>
    </div>
</div>

<!-- Раздел с поездками -->
<div class="settings-card mt-4">

    <div class="trips-container">
        <div class="trips-header">
            <h2 class="my-trip-header">My Trips</h2>
            <div class="create-trip-btn">
                <a asp-controller="Trips" asp-action="Create" class="add-trip-btn">Create New Trip</a>
            </div>
        </div>

        @if (Model.UserTrips != null && Model.UserTrips.Any())
        {
            <div class="trips-list">
                @foreach (var trip in Model.UserTrips)
                {
                    <div class="trip-item">
                        <div class="my-trip-details">
                            <div class="my-trip-route">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                    <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6"/>
                                </svg>
                                @trip.StartLocation ➞ @trip.EndLocation
                            </div>
                            <div class="my-trip-date">
                                <svg class="trip-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                @trip.DepartureDateTime.ToString("yyyy-MM-dd")
                            </div>
                        </div>
                        <div class="my-trip-actions">
                            <button class="view-button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"/>
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"/>
                                </svg>
                            </button>
                            <a asp-controller="Trips" asp-action="Edit" asp-route-id="@trip.Id" class="edit-button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-gear-fill" viewBox="0 0 16 16">
                                    <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
                                </svg>
                            </a>
                            <a asp-controller="Trips" asp-action="Delete" asp-route-id="@trip.Id" class="delete-button">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-trips">You don't have any trips yet.</div>
        }
    </div>
</div>