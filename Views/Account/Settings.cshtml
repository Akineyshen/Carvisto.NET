@model Carvisto.Models.UserSettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<div class="settings-container">
    <div class="settings-card">
        <h2 class="settings-title">Account Settings</h2>

        <form asp-action="Settings" method="post" class="settings-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="ContactName" class="form-label">Full Name</label>
                <input asp-for="ContactName" class="form-input" placeholder="Enter your full name" />
                <span asp-validation-for="ContactName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactPhone" class="form-label">Phone Number</label>
                <input asp-for="ContactPhone" class="form-input" placeholder="Enter your phone number" />
                <span asp-validation-for="ContactPhone" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="auth-button">Save</button>
            </div>
        </form>
    </div>
</div>

