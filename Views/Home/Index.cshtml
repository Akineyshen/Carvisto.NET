@model Carvisto.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Find Your Perfect Ride</h1>
                <p>Search for trips, connect with drivers, and travel together!</p>
                <div class="search-panel">
                    <form asp-action="Search" method="get" target="_blank">
                        <div class="mb-3">
                            <label asp-for="SearchModel.StartLocation" class="form-label">From</label>
                            <input asp-for="SearchModel.StartLocation" class="form-control" placeholder="e.g. Bialystok" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SearchModel.EndLocation" class="form-label">To</label>
                            <input asp-for="SearchModel.EndLocation" class="form-control" placeholder="e.g. Warszawa" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="SearchModel.DepartureDate" class="form-label">Date</label>
                            <input asp-for="SearchModel.DepartureDate" class="form-control" type="date" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </form>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/car.png" alt="Car" class="car-image" />
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Recent Trips</h2>
    <div class="row">
        @foreach (var trip in Model.RecentTrips)
        {
            <div class="col-md-4 mb-4">
                <div class="trip-card">
                    <h4 class="trip-title">@trip.StartLocation -> @trip.EndLocation</h4>
                    <p class="trip-info"><strong>Car:</strong> @trip.VehicleBrand</p>
                    <p class="trip-info"><strong>Price:</strong> @trip.Price PLN</p>
                    <p class="trip-info"><strong>Date:</strong> @trip.DepartureDateTime.ToString("yyyy-MM-dd")</p>
                    <a href="#" class="btn btn-primary btn-sm">View Trip</a>
                </div>
            </div>
        }
    </div>
</div>